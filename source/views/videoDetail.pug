extends layouts/main

block contents
    div.videoDetail
        // p=videoInfo._id
        div#videoContainer(data-videoid=videoInfo._id)
            video(src=`/${videoInfo.fileUrl}`)
            div#videoControls
                button#play Play
                button#mute Mute
                input(type="range" step="0.1" min="0" max="1" value="0.5")#volume
                div
                    span#currenTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
                div
                    input(type="range" step="1" min="0" value="0")#timeline
                div
                    button#fullScreen Enter Full Screen
        div.videoDetail__manu
            span.videoDetail__title
                h1=videoInfo.title
            span.videoDetail__description
                p=videoInfo.description
            span.videoDetail__views
                p #{videoInfo.views} VIEWS
            span.videoDetail__edit
                a(href=`/videos${routes.videoEdit(videoInfo.id)}`) VIDEO EDIT
            span.videoDetail__creator
                a(href="#") #{userInfo.name}
        if loggedUser
            div.video__comments
                form.video__comments-form#commentForm
                    textarea(cols="30" rows="10" placeholder="Write a nice comment...")
                    button Add Comment

block scripts
    script(src="/assets/js/videoPlayer.js")
    if loggedUser
        script(src="/assets/js/commentSection.js")